<h1>Listing Boards</h1>

<table>
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>Posts</th>
		<th>Created</th>
		<th>Updated</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
<% @boards.each do |board| %>
	<tr>
		<td><%= board.id %></td>
		<td><%= board.name %></td>
		<td><%= board.posts.size %></td>
		<td><%= board.created_at.strftime("%F") %></td>
		<td><%= board.updated_at.strftime("%F") %></td>
		<td><%= link_to 'Show', board %></td>
	<% if current_user && current_user.is_admin? %>
		<td><%= link_to 'A-Edit', edit_admin_board_path(board) %></td>
		<td><%= link_to 'A-Destroy', admin_board_path(board), :confirm => 'Are you sure', :method => :delete %></td>
	<% end %>
	</tr>
<% end %>
</table>

<% if current_user && current_user.is_admin? %>
	<%= link_to 'A-New Board', new_admin_board_path %>
<% end %>
<hr>
<p>Board Name collect: <%= @board_all%></p>
<p>Post Title collect: <%= @post_title_all%></p>
<p>Post Content collect: <%= @post_content_all%></p>